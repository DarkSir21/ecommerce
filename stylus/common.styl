
@charset "utf-8"

$gray = #e6e6e6
$red = #f04057
$yellow = #ffcd28
$black = #252525

@font-face
  font-family "Rubl Regular"
  font-weight normal
  src url('../../fonts/rubl-regular-webfont.woff2') format("woff2"),url('../../fonts/rubl-regular-webfont.woff') format("woff")

.rubl
  font-family "Rubl Regular"
  font-size 13px
  // margin-left 4px

*:focus
  outline 0

body
html
  font-family 'Open Sans', sans-serif
  font-size 14px


a:link
a:visited
  color $black

a:hover
  text-decoration none

.flex
  display flex

.top-head
  margin-top 30px

  &__flex
    justify-content space-between
    align-items center

.info-menu

  &__item
    color $black
    float left
    text-decoration underline
    padding 3px 0
    margin-right 30px

  &__item:last-child
    margin-right 0

  &__item:hover
    text-decoration none

  &__item_sales-btn
    background-color $yellow
    padding 3px 25px 3px 35px
    border-radius 12px
    font-weight 700
    text-decoration none
    position relative

  &__item_sales-btn:hover
    text-decoration none

  &__item_sales-btn:before
    content '%'
    position absolute
    color #fff
    background-color $red
    border-radius 50%
    height 23px
    width 23px
    line-height 22px
    text-align center
    top 2px
    left 0

.search-icon::before
  content ''
  display inline-block
  height 20px
  width 20px
  vertical-align top
  margin-right 3px
  background url(../../images/search.png) no-repeat 50% 50%


.search

  // &__wrapper
  //   box-shadow 0 0 0 1px $gray
  //   border-radius 5px

  &__input
    border-radius 5px 0px 0px 5px
    border 1px solid $gray
    width 200px
    height 30px
    padding 6px
    font-size 13px
    // box-shadow 0 0 0 1px $gray

  &__input::placeholder
    color $gray
    font-weight 700

  &__btn
    padding 0 7px
    height 30px
    border 0
    font-size 15px
    color #242424
    margin-left -4px
    background-color $gray
    border-radius 0px 5px 5px 0px
    vertical-align bottom


.ya-map
  min-height 575px

.cart
  height 40px
  background-color $yellow
  border-radius 20px
  position relative

  &:hover
    text-decoration none

  &__icon
    width 40px
    height 40px
    background $red url(../../images/cart.png) no-repeat 50% 50%
    border-radius 50%
    position absolute
    left 0
    top 0

  &__content
    font-size 15px
    font-weight 700
    text-align center
    padding 2px 20px 2px 50px
    line-height 18px

  &__price
    position relative
    text-decoration underline



.cart-bar
  padding-bottom 5px
  border-bottom 1px solid $gray

.category-bar
  margin-top 15px



.head-actions

  &__link
    display inline-block
    color $black
    text-transform uppercase
    padding 30px
    font-size 15px
    font-weight 700
    transform skew(-25deg)
    border-left 1px solid $gray
    border-top 1px solid $gray
    border-bottom 1px solid $gray

  &__link .text-unskew
    text-decoration underline

  &__link_active .text-unskew
  &__link:hover .text-unskew
    text-decoration none

  &__link_active
  &__link:hover
    background $gray


.text-unskew
  display inline-block
  transform skew(25deg)

.head-contacts
  position relative
  margin-left 20px
  border-top 1px solid $gray
  border-bottom 1px solid $gray
  border-right 1px solid $gray
  background-color #f4f3f3
  // transform skew(-25deg)
  flex 1 0 auto
  justify-content space-around
  align-items center

  &::before
    content ''
    display block
    position absolute
    left -21px
    top -1px
    bottom -1px
    width 40px
    transform skew(-25deg)
    background-color #f4f3f3
    border-top 1px solid $gray
    border-bottom 1px solid $gray

  // &::after
  //   content ''
  //   display block
  //   position absolute
  //   bottom -1px
  //   left -20px
  //   width 20px
  //   height 1px
  //   background $gray


.city-change
  position relative
  // transform skew(25deg)
  padding-left 30px

  &__name
    font-size 17px
    font-weight 700
    color $black

  &__link
    cursor pointer
    display inline-block
    font-size 13px
    font-weight 600
    border-bottom 1px dashed $black

  &::before
    content ''
    display block
    background url(../../images/adr.png) no-repeat 50% 50%
    width 25px
    height 25px
    position absolute
    left 0
    top 50%
    margin-top -12.5px


.phone
  // transform skew(25deg)
  text-align right

  &__title
    font-size 29px
    font-weight 700
    color $black

  &__icon
    display inline-block
    width 30px
    height 30px
    background url(../../images/phone.png) no-repeat 50% 50%
    margin-bottom -4px
    margin-right 5px

  &__desc
    font-size 13px
    color $black

  &__title:hover
    text-decoration none


.navigation

  margin-top 20px

  &__link
    display flex
    position relative
    align-items center
    color $black
    font-weight 700
    font-size 9px
    border-top 1px solid $gray
    border-bottom 1px solid $gray
    border-left 1px solid $gray
    text-align center
    padding 10px 7px
    text-decoration underline

  &__link:last-child
    border-right 1px solid $gray

  &__link::before
    content ''
    display none
    position absolute
    left -1px
    right -1px
    bottom -1px
    height 4px
    z-index 1
    background-color $yellow

  &__link_active
  &__link:hover
    text-decoration none
    background $gray

  &__link_active::before
  &__link:hover::before
    display block


.breadcrumb

  margin 20px 0 0
  background none
  padding 0

  &__item
    font-size 13px
    color #000
    text-decoration underline

  &__item::after
    content '/'
    display inline-block
    margin 0 4px


  &__item_active
  &__item:hover
    text-decoration none
  &__item_active:after
    content ''


.page-title
  font-weight 800
  font-size 24px
  color $black

.tags
  border-top 1px solid #d7d7d7

  &__sale
    display inline-block
    padding 4px 20px
    background $yellow
    color $black
    font-size 13px
    font-weight 700

.product
  margin-top 23px

  &__title
    margin 15px 0 15px

  &__manager
    margin-top 20px

.product-gallery

  &__main
    border 2px solid $gray

  &__main img
    max-width 100%

  &__list
    margin-top 10px

  &__list-item
    width 70px
    border 2px solid transparent
    border-color $gray
    margin-right 5px
    cursor pointer

  &__list-item_active
  &__list-item:hover
    border-color $yellow

  &__list-item:last-child
    margin-right 0

  &__list-item img
    max-width 100%


.product-tabs
  position relative
  transform translateX(10px)

  // &::before
  //   content ''
  //   display block
  //   position absolute
  //   top 0
  //   right 10px
  //   bottom 0
  //   width 1px
  //   background $gray

  &__wrapper
    overflow hidden
    border-right 1px solid $gray

  &__link
    display inline-block
    color $black
    padding 10px
    transform skew(-25deg)
    border-left 1px solid $gray
    border-top 1px solid $gray
    border-bottom 1px solid $gray
    flex 1 1 auto
    text-align center

  &__link .text-unskew
    text-decoration underline

  &__link_active .text-unskew
  &__link:hover .text-unskew
    text-decoration none

  &__link_active
  &__link:hover
    background $gray

  &__content
    padding 20px
    border-left 1px solid $gray
    // border-right 1px solid $gray
    border-bottom 1px solid $gray

  &__table
    width 100%
    display none

  &__table td
    width 50%
    padding 5px
    font-size 13px
    color $black

  &__active
    display inherit


.price-discount
  text-decoration line-through
  font-size 13px
  font-weight 300

.product-price
  background-color rgba($yellow, .55)
  padding-bottom 10px

  &__info
    padding 20px 30px

  &__discount
    color $black
    font-size 15px
    font-weight 600

  &__price
    font-size 29px
    color $red
    font-weight 700
    padding-bottom 10px

  &__adven
    font-size 12px
    font-weight 700
    margin-bottom 7px

  &__adven:last-child
    margin-bottom 0

  &__btns
    padding 0 10px
    justify-content space-between
    align-items center

  &__more-info
    display block
    font-weight 300
    font-size 13px
    text-decoration underline
    color $black
    text-align center
    margin-top 12px

  &__title
    color $black
    font-size 15px
    font-weight 700
    margin-bottom 20px

  &__deliv
    margin-top 5px
    padding 10px

  &__compare
    display block
    font-size 12px
    font-weight 700
    color $black
    margin-top 20px

.green-check-icon
.shield-icon
.blue-check-icon
  display inline-block
  width 20px
  height 20px
  vertical-align top
  margin-right 10px

.green-check-icon
  background url(../../images/green_check.png) no-repeat 50% 50%

.shield-icon
  background url(../../images/shield.png) no-repeat 50% 50%

.blue-check-icon
  background url(../../images/blue_check.png) no-repeat 50% 50%

.line-icon
  display inline-block
  width 30px
  height 30px
  vertical-align middle
  margin-right 10px
  background url(../../images/line_icon.png) no-repeat 50% 50%

.pek-icon
  display inline-block
  width 33px
  height 33px
  vertical-align middle
  margin-right 10px
  background url(../../images/pek_icon.png) no-repeat 50% 50%

.compare-icon
  display inline-block
  width 20px
  height 20px
  background url(../../images/compare.png) no-repeat 50% 50%
  vertical-align middle
  margin-right 8px

.buy-button
  font-size 17px
  padding 6px 30px

.btn-red
  font-weight 800
  background $red
  border none
  color #fff
  box-shadow 1.4px 1.5px 0 rgba(0, 0, 0, 0.47)

.buy-one-click
  font-weight 700
  text-decoration underline
  font-size 13px
  color $black

.checked-city
  text-decoration underline


.review
  margin-top 30px

  &__title
    margin 0


.steps
  background-color #f5f5f5
  border 1px solid $gray
  margin-top 15px
  padding 30px 40px

  &__step
    align-items center

  &__step::after
    content ''
    width 112px
    height 1px
    background-color $red
    display inline-block
    margin-right 18px

  &__step:last-child::after
    display none

  &__number
    align-items center
    justify-content center
    font-size 19px
    text-align center
    font-weight 700
    color #fff
    background-color #9e9e9e
    width 30px
    height 30px
    border-radius 50%
    margin-right 15px

  &__number_active
    background-color $red

  &__title
    font-size 13px
    font-weight 700
    color $black
    margin-right 10px


.red-link
.red-link:link
.red-link:hover
  display inline-block
  color $red
  font-size 13px
  position relative
  text-decoration none
  margin-top -2px

  &::before
    content ''
    position absolute
    border-bottom 1px dashed $red
    bottom -2px
    left 0
    right 0


.video-review
  margin-top 30px

  &__title
    display inline-block
    margin 0 20px 20px 0

  &__link-more
    transform translateY(-2px)

  &__item
    background-color #f8f8f8
    border 1px solid #e8e8e8
    padding 20px
    margin-bottom 20px

  &__item:last-child
    margin-bottom 0

  &__item-title
    font-size 13px
    font-weight 800
    color $black
    margin-bottom 20px

  &__list
    padding 0
    margin 0

  &__list-item
    font-size 13px
    color $black
    padding 5px 0 5px

  &__desc
    padding 25px
    margin 0
    font-size 13px
    color $black
    background url(../../images/quotes.png) no-repeat 0% 0%

  &__desc-wrapper
    flex-direction column

  &__author
    font-size 13px
    color $black
    text-align right
    margin-top 40px


.special-form
  margin-top 16px
  background-color $yellow
  border-top 1px dashed $gray
  border-bottom 1px dashed $gray

  &__title
    margin 20px 0 35px

  &__form
    padding 30px 40px 60px

  &__input
    border none
    border-radius 5px
    max-width 200px
    font-size 16px
    font-weight 700
    padding 11px 21px
    margin-right 12px

  &__input:last-child
    margin-right 27px

  &__submit
    font-size 19px
    padding 11px 22px


.last-view

  &__title
    margin 20px 0

  &__item
    border 2px solid transparent
    border-color $gray

  &__item:hover
    border-color $yellow

  &__item-image img
    width 100%
    height auto

  &__item-desc
    padding 0 15px 15px

  &__item-type
    font-size 13px
    color $black
    line-height 14px
    margin-bottom 5px

  &__item-name
    font-size 18px
    font-weight 700
    color $black
    margin-bottom 20px

  &__item-actions
    justify-content space-between

  &__add-cart
    padding 8px 14px
    align-self center
    background #ccc

  &__add-cart:hover
    background $red


.desc-site

  margin-bottom 40px

  &__title
    margin 40px 0 40px

  &__item
    color $black
    font-size 19px
    font-weight 600

footer
  background-color #464646
  border-top 1px dashed #e6e6e6
  border-bottom 1px dashed #e6e6e6

.footer-search
  margin-top 70px
  position relative

  &__input
    width 100%
    border 1px solid $gray
    border-radius 5px
    font-size 13px
    padding 10px 80px 10px 6px

  &__input::placeholder
    color #4d4d4d
    font-size 13px
    font-weight 700

  &__button
    position absolute
    right 0
    top 0
    bottom 0
    background-color $gray
    border 1px solid $gray
    border-radius 0px 5px 5px 0px
    color $black
    font-size 13px
    font-weight 800
    padding 0 20px 0 15px

  &__button::before
    margin-right 10px


.exemple
  margin-top 10px
  font-size 13px
  font-weight 300
  color #e8e8e8


.navigation-footer
  font-size 13px
  margin-top 50px
  color #e8e8e8
  position relative

  &::before
    content ''
    position absolute
    right 15px
    left 15px
    bottom 0
    background $gray
    height 1px

  &__list
    padding 0
    margin 0
    list-style none

  &__title
    text-transform uppercase
    margin 0 0 35px 0
    font-size 16px

  &__link:link
  &__link:visited
    color #e8e8e8
    text-decoration underline

  &__link:hover
    text-decoration none

  &__contacts
    font-size 13px
    color #e8e8e8
    margin-bottom 25px


.logo-white img
  display inline-block
  max-width 100%
  margin-bottom 15px

.footer-info

  margin-top 20px

  &__docs
    font-size 13px
    color #e8e8e8
    line-height 21px

  &__desc
    font-size 13px
    color #e8e8e8
    line-height 19px
    margin-bottom 23px
    text-align justify
